<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/widget_view">

    <ImageButton
        android:id="@+id/prevCharacter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/widget_arrow_left_background" />
    <TextView
        android:id="@+id/characterName"
        android:layout_width="196dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:layout_weight="1"
        android:textColor="@color/gray"
        android:fontFamily="monospace" />

    <ImageButton
        android:id="@+id/nextCharacter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/widget_arrow_right_bacground" />
</LinearLayout>